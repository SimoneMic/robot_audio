<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<robot name="azureTranscriptionRob" build="2" portprefix="/azureTranscription" xmlns:xi="http://www.w3.org/2001/XInclude">
    <devices>
        <device name="azureTranscription" type="whisperDevice">
            <group name="ENVS">
                <param extern-name="whisper_api_key_name" name="api_key_name">
                    AZURE_WHISPER_API_KEY
                </param>
                <param extern-name="whisper_end_point_name" name="end_point_name">
                    AZURE_WHISPER_ENDPOINT
                </param>
            </group>
        </device>
        <device name="transcriptionWrap" type="speechTranscription_nws_yarp">
            <action phase="startup" level="5" type="attach">
                <paramlist name="networks">
                    <elem name="subdeviceAzure">
                        azureTranscription
                    </elem>
                </paramlist>
            </action>
            <action phase="shutdown" level="5" type="detach" />
        </device>
    </devices>
</robot>